{
  "version": 2,
  "buildCommand": "npx prisma generate && nest build",
  "builds": [
    {
      "src": "dist/main.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/main.js"
    }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/" }],
  "functions": {
    "dist/main.js": {
      "includeFiles": "prisma/schema.prisma"
    }
  }
}
